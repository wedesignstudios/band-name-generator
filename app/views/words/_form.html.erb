<%= content_tag :div, class: "row m-b-1" do %>
  <%= content_tag :h2, "Add A Word", class: "m-y-1" %>
<% end %>

<%= form_for @word do |f| %>

  <%= content_tag :div, id: "error_explanation" do %>
    <% @word.errors.full_messages.each do |msg| %>    
      <%= content_tag(:div, msg, id: "error_message", class: "alert alert-danger") %>
    <% end %>
  <% end if @word.errors.any? %>
  
  <%= content_tag :div, class: "form-group row" do %>
    <%= f.label "Word", class: "col-sm-2 col-form-label" %>
    <%= content_tag :div, class: "col-sm-4" do %>
      <%= f.text_field :string, class: "form-control" %>
    <% end %>
  <% end %>

  <%= content_tag :div, class: "form-group row" do %>
    <%= f.label "Article?", class: "col-sm-2 col-form-label" %>
    <%= content_tag :div, class: "col-sm-10" do %>
      <%= f.check_box :article, class: "form-control" %>
    <% end %>
  <% end %>

  <%= content_tag :div, class: "form-group row" do %>
    <%= f.submit class: "btn btn-primary" %>
  <% end %>

<% end %>